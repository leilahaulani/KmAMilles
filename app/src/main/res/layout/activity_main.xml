<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/KM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/text_km"
        android:layout_alignBottom="@+id/text_km"
        android:layout_alignStart="@+id/Millas"
        android:text="@string/kil_metros"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/text_km"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_m"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="27dp"
        android:layout_marginEnd="12dp"
        android:ems="10"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/btn_km"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="97dp"
        android:text="@string/a_km" />

    <TextView
        android:id="@+id/Millas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btn_km"
        android:layout_below="@+id/btn_km"
        android:layout_marginStart="11dp"
        android:layout_marginTop="49dp"
        android:text="@string/millas"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/text_m"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/Millas"
        android:layout_alignBottom="@+id/Millas"
        android:layout_alignEnd="@+id/btn_m"
        android:ems="10"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/btn_m"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_km"
        android:layout_alignBottom="@+id/btn_km"
        android:layout_alignEnd="@+id/text_km"
        android:text="@string/a_milles" />

</RelativeLayout>